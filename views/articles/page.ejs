<%- include("../partials/head.ejs");%> 
<%- include("../partials/homenavbar.ejs");%> 
<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4 text-white">Seja bem vindo</h1>
            <p class="lead text-white">Veja os nossos melhores artigos logo abaixo</p>
        </div>
        <% result.articles.rows.forEach(a => { %>
        <div class="card text-center m-4">
            <div class="card-header">
                <h5 class="card-title"><%= a.title %></h5>
            </div>
            <div class="card-body">
              
              <p class="card-text text-truncate" style="max-width: 150px;"><%= a.body %></p>
              <div class="card-box">
                 
                <a href="/article/<%= a.slug %> " class="btn " >
                    Ler mais
                  </a>
             
           
          </div>
            </div>
            <div class="card-footer text-muted">
             Ultima atualização:<%= a.updatedAt %>
            </div>
          </div>
          <% }) %>





        <div class="row float-right ">
            <div class="col col-12 next-box">
                <% if (result.page > 2) { %>
                    <a href="/articles/page/<%= result.page - 1 %> " class="float-start btn ">
                        <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                        VOLTAR
                    </a>
                <% } else if (result.page == 2) { %>
                    <a href="/" class="float-start btn "> 
                        <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                        VOLTAR
                     </a>

                    <% } %>
                <% if (result.next) { %>   <!-- Verificando se existe proxima pagina -->
                    <a href="/articles/page/<%= result.page + 1 %> " class="float-end btn ">
                        <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                        AVANÇAR
                    </a>
                <% } %>
                
            </div>

    </div>
    
    </div>
</body>
<%- include("../partials/footer.ejs") %> 