<div class="login-box">
  <h2>REGISTER</h2>
  <form  action="/users/create" method="POST">
    
    <label for="email" class="form-label text-white">Email</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required>
    <label for="Password" class="form-label text-white">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Digite seu Password" required>
   
    <div class="form-check mt-2">
      <input class="form-check-input" type="radio" name="adm" id="common" value="false">
      <label class="form-check-label text-white" for="adm">
        COMMON USER
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="adm" id="adm" value="true" checked>
      <label class="form-check-label text-white" for="adm">
        ADM USER
      </label>
    </div>
    
    <button type="submit" class="btn" >
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      REGISTRAR
    </button>

    
  </form>
</div>

